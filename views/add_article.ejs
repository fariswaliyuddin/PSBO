    <section>
        <div class="container mx-auto my-20 w-full border border-purple-500 bg-white">
            <div class="p-5 space-y-5 shadow-xl">
                <h4 class="text-center text-3xl">Create New Article</h4>
                <form>
                    <div class="grid grid-cols-1 gap-5">
                        <label for="title" class="select-none mt-4 text-sm font-bold">Title</label>
                        <input type="text" id="title" placeholder="Article Title"
                        class="border border-gray-500 px-4 py-2 focus:outline-none focus:border-purple-500"/>
                        <label for="tag" class="select-none mt-2 mb-2 text-sm font-bold">Tag</label>
                        <select name="tag" id="tag">
                            <option value="lifestyle">Lifestyle</option>
                            <option value="tips">Tips</option>
                            <option value="love">Love</option>
                            <option value="health">Health</option>    
                        </select>
                        <label for="body" class="select-none mt-2 mb-2 text-sm font-bold">Body</label>
                        <textarea rows="3" placeholder="Enter Article Body."
                        class="form-textarea mt-1 block w-full border border-gray-500 px-4 py-2 
                        focus:outline-none focus:border-purple-500" 
                        ></textarea>                        



                        <div class="image">
                            <div class="flex w-full h-32 items-center justify-center bg-grey-lighter">
                                <label class="w-64 flex flex-col items-center justify-center px-4 py-6 bg-white text-blue-400 rounded-lg shadow-lg tracking-wide uppercase border border-blue-500 cursor-pointer hover:bg-blue-500 hover:text-white">
